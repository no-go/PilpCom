<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/colorPrimaryDarker"
    android:orientation="vertical"
    android:keepScreenOn="true"
    >

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:weightSum="5"
        android:layout_height="wrap_content">

        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="16dp"
            android:fontFamily="@font/c64pro_mono"
            android:textColor="@color/colorPrimary"
            android:background="@android:color/transparent"
            android:onClick="toClk"
            android:text="@string/clk"
            />
        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="16dp"
            android:fontFamily="@font/c64pro_mono"
            android:textColor="@color/colorPrimary"
            android:background="@android:color/transparent"
            android:onClick="toWho"
            android:text="@string/who"
            />
        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="16dp"
            android:fontFamily="@font/c64pro_mono"
            android:textColor="@color/colorPrimary"
            android:background="@android:color/transparent"
            android:onClick="toMsg"
            android:text="@string/msg"
            />
        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="16dp"
            android:fontFamily="@font/c64pro_mono"
            android:textColor="@color/colorPrimary"
            android:background="@android:color/transparent"
            android:onClick="toArea"
            android:text="@string/area"
            />
        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="16dp"
            android:fontFamily="@font/c64pro_mono"
            android:textColor="@color/colorAccent"
            android:background="@color/colorPrimaryDark"
            android:text="@string/news"
            />
    </LinearLayout>

    <Button
        android:id="@+id/classicBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:textSize="16dp"
        android:fontFamily="@font/c64pro_mono"
        android:textColor="@color/colorAccent"
        android:background="@color/colorPrimaryDarker"
        android:text="@string/classic_radio"
        android:textAlignment="gravity"
        android:gravity="center_vertical"
        android:minHeight="0dp"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:textAllCaps="false"
        android:layout_marginBottom="1dp"
        />

    <Button
        android:id="@+id/diamondBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/c64pro_mono"
        android:textSize="16dp"
        android:textColor="@color/colorAccent"
        android:text="@string/diamond_radio"
        android:textAlignment="gravity"
        android:gravity="center_vertical"
        android:minHeight="0dp"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:background="@color/colorPrimaryDarker"
        android:textAllCaps="false"
        android:layout_marginBottom="1dp"
        />

    <Button
        android:id="@+id/ostBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/c64pro_mono"
        android:textSize="16dp"
        android:textColor="@color/colorAccent"
        android:text="@string/ost_radio"
        android:textAlignment="gravity"
        android:gravity="center_vertical"
        android:minHeight="0dp"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:background="@color/colorPrimaryDarker"
        android:textAllCaps="false"
        android:layout_marginBottom="1dp"
        />

    <Button
        android:id="@+id/generalBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/c64pro_mono"
        android:textSize="16dp"
        android:textColor="@color/colorAccent"
        android:text="@string/general_radio"
        android:textAlignment="gravity"
        android:gravity="center_vertical"
        android:minHeight="0dp"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:background="@color/colorPrimaryDarker"
        android:textAllCaps="false"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView" >


            <TextView
                android:id="@+id/section_news"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/c64pro_mono"
                android:textSize="11dp"
                android:textColor="@color/colorAccent"
                android:background="@color/colorPrimaryDark"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:paddingBottom="60dp" />

    </ScrollView>

</LinearLayout>
